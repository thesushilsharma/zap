{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "ESNext", 
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist", // Output directory
    "rootDir": "./", // Root directory for source files
    "skipLibCheck": true
  },
  "include": ["bin", "src"], // Include these folders
  "exclude": ["node_modules"]
}
